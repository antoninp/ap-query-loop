{
  "apiVersion": 3,
  "name": "apql/filter",
  "title": "APQL Filter",
  "description": "Group the current Query Loop posts by a taxonomy and render content per term. Use InnerBlocks to compose your layout.",
  "category": "theme",
  "icon": "filter",
  "textdomain": "apql-gallery",
  "parent": ["core/query"],
  
  "usesContext": ["query", "queryId"],
  "supports": { 
    "html": false,
    "innerBlocks": true
  },
  "attributes": {
    "taxonomy": { "type": "string", "default": "" },
    "termOrderBy": { "type": "string", "default": "name" },
    "termOrder": { "type": "string", "default": "asc" }
  }
}
