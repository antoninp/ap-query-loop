{
  "apiVersion": 3,
  "name": "apql/filter",
  "title": "APQL Filter",
  "description": "Group the current Query Loop posts by a taxonomy or meta field and render content per term/value. Use InnerBlocks to compose your layout.",
  "category": "theme",
  "icon": "filter",
  "textdomain": "apql-gallery",
  "parent": ["core/query"],
  
  "usesContext": ["query", "queryId"],
  "supports": { 
    "html": false,
    "innerBlocks": true
  },
  "attributes": {
    "groupBy": { "type": "string", "default": "taxonomy" },
    "taxonomy": { "type": "string", "default": "" },
    "metaKey": { "type": "string", "default": "" },
    "metaType": { "type": "string", "default": "string" },
    "dateFormat": { "type": "string", "default": "F j, Y" },
    "termOrderBy": { "type": "string", "default": "name" },
    "termOrder": { "type": "string", "default": "desc" }
  }
}
