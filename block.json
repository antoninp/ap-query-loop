{
  "apiVersion": 3,
  "name": "ap/query-loop-gallery",
  "title": "AP Query Loop Gallery",
  "description": "Display a list of posts from a selected post type as a gallery using featured images.",
  "category": "theme",
  "icon": "images-alt2",
  "textdomain": "ap-query-loop",
  "supports": {
    "html": false
  },
  "attributes": {
    "postType": {
      "type": "string",
      "default": "post"
    },
    "perPage": {
      "type": "number",
      "default": 12
    },
    "order": {
      "type": "string",
      "enum": ["asc", "desc", "ASC", "DESC"],
      "default": "DESC"
    },
    "orderBy": {
      "type": "string",
      "default": "date"
    },
    "enablePagination": {
      "type": "boolean",
      "default": false
    }
  },
  "editorScript": "file:./editor.js",
  "style": "file:./style.css"
}
